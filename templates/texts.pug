extends base

block content
    each blog in blogs
        #part(data-aos="fade-up",data-aos-duration="600")
            .row.my-4
                .col-lg-12
                    h1.display-4.titles= blog.title 
                    .p.paragraf4 #{blog.author.googleData.displayName} | #{parseDate(blog.pub_date)}
            .row
                .col-md-8
                    p.paragraf= blog.spoiler

                .col-md-4
                    img.img-fluid(src="/images/" + blog.image, alt='')

            .row.mt-3
                .col-lg-12
                    .d-flex.align-items-end
                        a.btn.btn-grad.p-2(href="/blog/" + blog._id) Devamını Oku
                            i.ml-1.fas.fa-angle-double-right
                        
        
block js
    script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
    script.
        AOS.init();