html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet", href="/components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/components/css/style.css")
        link(href='https://fonts.googleapis.com/css?family=Yellowtail&display=swap', rel='stylesheet')

        block styles

        title #{title}
    body
        nav#navbar1.navbar.fixed-top.navbar-expand-lg.navbar-light.ml-auto.bg-light
            .container
                a.navbar-brand(style="font-size:40px;font-family: 'Yellowtail', cursive;", href='#') Güngör Öztürk
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.container.navbar-collapse.ml-auto
                    ul.navbar-nav.ml-auto
                        li.nav-item
                            a.nav-link(href='#')
                                | En Yeniler
                                span.sr-only (current)
                        li.nav-item
                            a.nav-link(href='#') Hakkımda
                        li.nav-item
                            a.nav-link(href='#') Takip Et
                        li.nav-item
                            a.nav-link(href='#') Yazar Girişi
                    form.form-inline.my-2
                        input.form-control.mr-sm-2(type='search', placeholder='Merak Ettikleriniz ?', aria-label='Merak Ettikleriniz ?')
                        button.btn.btn-outline-primary.my-2(type='submit')
                            | Ara 
                            i.fas.fa-search

        .container.main
            block content


    script(src='/components/jquery/dist/jquery.min.js')
    script(src='/components/bootstrap/dist/js/bootstrap.min.js')
    block js